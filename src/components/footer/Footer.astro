---
const { lang } = Astro.props;
---

<footer>
  <section class="section-footer">
    <div class="linear-grandient-1"></div>
    <div class="container-footer">
      <div class="header-footer">
        <h2 class="title-contact" id="contacto">
          {lang === "es" ? "Contacto" : "Contact"}
        </h2>
        <a href="#inicio" class="btn-inicio"><i class="fas fa-home"></i></a>
      </div>
      <div class="container-redes">
        <a href="https://wa.me/+50433821130" target="_blank">
          <li class="li-contact">
            <i class="fa-brands fa-whatsapp icon-whatsapp"></i>
            <p>Whatsapp</p>
          </li>
        </a>

        <a href="https://github.com/israelsalinashn-g" target="_blank">
          <li class="li-contact">
            <i class="fa-brands fa-github"></i>
            <p>Github</p>
          </li>
        </a>

        <a href="https://www.instagram.com/isalinashn/" target="_blank">
          <li class="li-contact">
            <i class="fa-brands fa-instagram"></i>
            <p>Instagram</p>
          </li>
        </a>

        <a href="https://www.linkedin.com/in/israelsalinashn/" target="_blank">
          <li class="li-contact">
            <i class="fa-brands fa-linkedin"></i>
            <p>Linkedin</p>
          </li>
        </a>
      </div>
    </div>
  </section>
</footer>

<style>
  .section-footer {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    background-color: #111111;
    justify-content: center;
    align-items: center;
  }

  .linear-grandient-1 {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, #000080, #000);
    z-index: 0;
  }

  .container-footer {
    position: relative;
    z-index: 1;
    width: 90%;
    height: 100%;
    margin: 0 auto;
    padding: 20px 0;
    max-width: 1355px;
  }

  .header-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 0;
  }

  .btn-inicio {
    background-color: #007bff;
    color: white;
    padding: 8px 12px;
    border-radius: 20px;
    text-decoration: none;
    font-weight: bold;
    font-size: 16px;
    display: flex;
    align-items: center;
    gap: 5px;
    transition: background-color 0.3s ease;
  }

  .btn-inicio:hover {
    background-color: #0056b3;
  }

  .title-contact {
    font-size: 27px;
    color: #f6f6f9;
    text-align: left;
    width: 100%;
    font-weight: 800;
    scroll-margin-top: 80px;
    padding: 20px 0;
  }

  .container-redes {
    position: relative;
    display: flex;
    gap: 30px;
    justify-content: space-between;
    padding: 30px 0;
    flex-wrap: wrap;
  }

  .container-redes a {
    text-decoration: none;
    color: #f6f6f9;
  }
  .li-contact {
    list-style: none;
    display: flex;
    gap: 10px;
    align-items: center;
    transition: color 0.2s ease-in-out;
  }
  .li-contact i {
    font-size: 30px;
  }

  .li-contact:hover {
    color: #000080;
  }
  .container-copy {
    position: relative;
    color: #f6f6f9;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    padding: 10px 0;
  }
</style>
